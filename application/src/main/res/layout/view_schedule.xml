<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/cardview_default_elevation"
    app:cardCornerRadius="@dimen/cardview_default_radius">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground">

        <View
            android:id="@+id/schedule_ribbon"
            android:layout_width="8dp"
            android:layout_height="match_parent"
            android:background="@color/accent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/schedule_group"
            style="@style/Text.Header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/eight"
            android:paddingStart="@dimen/sixteen"
            android:paddingTop="@dimen/eight"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/schedule_time"
            style="@style/Text.Default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/eight"
            android:paddingEnd="@dimen/eight"
            android:paddingStart="@dimen/sixteen"
            android:paddingTop="@dimen/eight"
            app:layout_constraintLeft_toLeftOf="@+id/schedule_group"
            app:layout_constraintTop_toBottomOf="@+id/schedule_group"/>
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
