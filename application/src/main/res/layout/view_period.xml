<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/cardview_default_elevation"
    app:cardCornerRadius="@dimen/cardview_default_radius">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/period_name"
            style="@style/Text.Header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/eight"
            android:paddingStart="@dimen/sixteen"
            android:paddingTop="@dimen/eight"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/period_start"
            style="@style/Text.Default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/eight"
            android:paddingStart="@dimen/sixteen"
            android:paddingTop="@dimen/eight"
            app:layout_constraintLeft_toLeftOf="@+id/period_name"
            app:layout_constraintTop_toBottomOf="@+id/period_name"/>

        <TextView
            android:id="@+id/period_duration"
            style="@style/Text.Default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/eight"
            android:paddingEnd="@dimen/eight"
            android:paddingStart="@dimen/sixteen"
            android:paddingTop="@dimen/eight"
            app:layout_constraintLeft_toLeftOf="@+id/period_start"
            app:layout_constraintTop_toBottomOf="@+id/period_start"/>
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
